<swiper class="container" index="0">
    <div class="swiper-item">
        <stack class="stack-parent">
            <progress type="arc" onclick="updateText" class="progress" percent="{{ waterPercentage }}"/>

            <div class="container">
                <text class="title" onlongpress="reset">
                    {{ waterText }}
                </text>
                <text class="title" onlongpress="reset">
                    {{ waterTitle }}
                </text>

                <div class="btnContainer">
                    <input type="button" class="rightBtn" onclick="minusWater" onlongpress="decreaseTotal"
                           value="-"/>
                    <input type="button" class="leftBtn" onclick="plusWater" onlongpress="increaseTotal" value="+"/>
                </div>
            </div>
        </stack>
    </div>

    <div class="swiper-item">
        <stack class="stack-parent">
            <progress type="arc" class="progress" percent="{{ timePercentage }}"/>

            <div class="container">
                <text class="titleSmaller">
                    {{ timeTitle }}
                </text>

                <text class="title">
                    {{ time }}
                </text>
            </div>
        </stack>
    </div>

</swiper>